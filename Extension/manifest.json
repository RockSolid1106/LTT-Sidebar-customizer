{
  "name": "LTT Forum Customizer",
  "description": "A very basic Chrome/Edge extension to customize what is shown on the sidebar on www.linustechtips.com",
  "version": "0.8.6",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    
  "page": "options.html",
  "open_in_tab": false
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "144": "/images/logo2.png"
    }
  },
  "content_scripts": [
    {
        "matches": ["https://linustechtips.com/*"],
        "js": ["/content_script.js"]
    }
]
}